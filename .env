POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=benchmarks
PORT=3001
# Explicitly set DATABASE_URL to avoid nested expansion issues
DATABASE_URL=postgresql://app:app@db:5432/benchmarks?schema=public
####################################################################
# Server hardening options
####################################################################
# Comma-separated origins, or * for any (for dev). Example: https://app.example.com
CORS_ORIGIN=http://localhost:3000
# Max JSON body size
BODY_LIMIT=1mb
# Rate limiting window and max requests
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=20
API_KEY=test_api_key_123


