POSTGRES_USER=app
POSTGRES_PASSWORD=change_me
POSTGRES_DB=benchmarks
PORT=3001
# Explicitly set DATABASE_URL to avoid nested expansion issues
DATABASE_URL=postgresql://app:change_me@db:5432/benchmarks?schema=public
####################################################################
# Server hardening options
####################################################################
# Comma-separated origins, or * for any (for dev). Example: https://app.example.com
CORS_ORIGIN=*
# Max JSON body size
BODY_LIMIT=1mb
# Rate limiting window and max requests
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
API_KEY=

# Optional HMAC signing for ingest; when set, client must sign requests
INGEST_HMAC_SECRET=
INGEST_MAX_SKEW_SECONDS=300


