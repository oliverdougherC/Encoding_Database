generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Benchmark {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Hardware info
  cpuModel String
  gpuModel String?
  ramGB    Int
  os       String

  // Test parameters
  codec  String
  preset String

  // Results
  fps           Float
  vmaf          Float?
  fileSizeBytes Int

  notes String?
}
